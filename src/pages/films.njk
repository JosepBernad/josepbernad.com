---
pagination:
  data: languages.list
  size: 1
  alias: lang
permalink: "{{ lang.prefix }}/films/"
layout: base.njk
pageId: films
showClaim: false
showName: true
sectionName: Films
eleventyComputed:
  currentLang: "{{ lang.code }}"
  currentPrefix: "{{ lang.prefix }}"
  lang: "{{ lang.code }}"
  langPrefix: "{{ lang.prefix }}"
---

<div class="section-container films-container">
  {% for film in films.items %}
  <article class="film-card{% if film.tags[0] == 'Live Set' %} film-card--live{% endif %}" data-video-id="{{ film.videoId }}" data-title="{{ film.title }}" data-tags='{{ film.tags | dump | safe }}' data-location="{{ film.location }}" data-date="{{ film.date }}">
    <div class="film-thumbnail">
      <img src="https://img.youtube.com/vi/{{ film.videoId }}/hqdefault.jpg" alt="{{ film.title }}" loading="lazy" width="480" height="360">
      <div class="film-play">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
          <path d="M8 5v14l11-7z"/>
        </svg>
      </div>
    </div>
    <div class="film-info">
      <h2 class="film-title">{{ film.title }}</h2>
      <div class="film-tags">
        {% for tag in film.tags %}
        <span class="film-tag">{{ tag }}</span>
        {% endfor %}
      </div>
    </div>
    <span class="film-location">{{ film.location }}</span>
    <span class="film-date" data-year="{{ film.date.split('-')[0] }}" data-month="{{ film.date.split('-')[1] }}"></span>
  </article>
  {% endfor %}
</div>

{% include "video-modal.njk" %}
